<h1>
  Welcome to Wikinimous
</h1>
<div class="articles">
  <p><%= link_to "Create a new article", articles_new_path  %></p>
  <h1>Articles</h1>
    <% @articles.each do |article| %>
    <div class="article">
      <div class="article-title">
        <h2><%= link_to article.title, article_path(article)  %></h2>
      </div>
      <div class="article-content">
        <p><%= truncate(article.content, length: 50) %></p>
      </div>
      <div>
      <p><%= link_to "Edit", "articles/#{article.id}/edit"  %></p>
      <p><%= link_to "ðŸ—‘", "articles/#{article.id}", method: :delete, data: { confirm: "Are you sure?" } %></p>
    </div>
  </div>
    <% end %>

</div>




